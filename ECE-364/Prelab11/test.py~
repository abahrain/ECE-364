import sys
import bitWorker

dBin=bitWorker.displayBinary(22)
gBin1=bitWorker.getBit(0, 99)
gBin2=bitWorker.getBit(3, 17)
gPV1=bitWorker.getPartialValue(1,4,67)
gPV2=bitWorker.getPartialValue(3,6,117)
gPV3=bitWorker.getPartialValue(1,3,22)

print dBin
print gBin1
print gBin2
print gPV1
print gPV2
print gPV3
